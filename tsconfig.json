{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2021"
    },
    "exclude": [
        "**/*/*.test.ts",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}